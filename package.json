{
  "name": "wgsl-playground",
  "version": "1.0.0",
  "description": "Playground for testing and debugging WGSL shaders.",
  "devDependencies": {
    "@parcel/namer-default": "^2.12.0",
    "@parcel/plugin": "^2.12.0",
    "@parcel/transformer-pug": "^2.12.0",
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@webgpu/types": "^0.1.44",
    "parcel": "^2.11.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "clean": "rm -rf .parcel-cache dist",
    "start": "npm run clean && parcel src/index.pug",
    "start:wsl2": "npm run clean && parcel --host 0.0.0.0 src/index.pug",
    "lint": "eslint --fix src/ parcel-extentions/",
    "build:test": "parcel build src/index.htpp"
  },
  "type": "module",
  "dependencies": {
    "@codemirror/language": "^6.10.2",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.30.0",
    "@phosphor-icons/core": "^2.1.1",
    "@phosphor-icons/web": "^2.1.1"
  }
}
